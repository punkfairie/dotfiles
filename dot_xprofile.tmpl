#!/usr/bin/env sh

export ICEAUTHORITY="$XDG_CACHE_HOME"/ICEauthority

sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap
userresources="$XDG_CONFIG_HOME"/.Xresources
usermodmap="$XDG_CONFIG_HOME"/.Xmodmap

if [ -f "$sysresources" ]; then
  xrdb -merge "$sysresources"
fi

if [ -f "$sysmodmap" ]; then
  xmodmap "$sysmodmap"
fi

if [ -f "$userresources" ]; then
  xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
  xmodmap -merge "$usermodmap"
fi

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/?*.sh; do
    # shellcheck source=/dev/null
    [ -x "$f" ] && . "$f"
  done

  unset f
fi

# shellcheck disable=all
{{- if eq .chezmoi.hostname "archgirlie" }}
"$HOME/.config/xrandr/desktop.sh"
{{- end }}

sudo mount -a

{{ if eq .chezmoi.hostname "archgirlie" -}}
setxkbmap -option "apple:alupckeys"
{{ end -}}

{{ if lookPath "copyq" -}}
copyq &
{{ end -}}
{{ if lookPath "mpd" -}}
mpd &
{{ end -}}
{{ if lookPath "numlockx" -}}
numlockx on
{{ end -}}
{{ if lookPath "pidgin" -}}
pidgin &
{{ end -}}
